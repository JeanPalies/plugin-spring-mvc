<?xml version="1.0"?>
<metawidget xmlns="http://metawidget.org"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:processor="java:org.metawidget.statically.spring.widgetprocessor"
	xsi:schemaLocation="http://metawidget.org http://metawidget.org/xsd/metawidget-1.0.xsd
						java:org.metawidget.statically.spring http://metawidget.org/xsd/org.metawidget.statically.spring-1.0.xsd
						java:org.metawidget.inspector.composite http://metawidget.org/xsd/org.metawidget.inspector.composite-1.0.xsd"
	version="1.0">

	<!-- metawidget-search.xml is used to generate the search fields -->
	
	<staticSpringMetawidget xmlns="java:org.metawidget.statically.spring">
	
		<inspector>
			<compositeInspector xmlns="java:org.metawidget.inspector.composite" config="CompositeInspectorConfig">
				<inspectors>
					<array>
						<propertyTypeInspector xmlns="java:org.metawidget.inspector.propertytype" config="org.metawidget.inspector.impl.BaseObjectInspectorConfig">
							<propertyStyle>
								<forgePropertyStyle id="forgePropertyStyle" xmlns="java:org.jboss.forge.spring.metawidget.inspector.propertystyle" config="ForgePropertyStyleConfig">
									<project>
										<forgeProject/>
									</project>
								</forgePropertyStyle>
							</propertyStyle>
						</propertyTypeInspector>
						<forgeInspector xmlns="java:org.jboss.forge.spring.metawidget.inspector" config="org.metawidget.inspector.impl.BaseObjectInspectorConfig">
							<propertyStyle>
								<forgePropertyStyle refId="forgePropertyStyle"/>
							</propertyStyle>
						</forgeInspector>
						<jpaInspector xmlns="java:org.metawidget.inspector.jpa" config="JpaInspectorConfig">
							<propertyStyle>
								<forgePropertyStyle refId="forgePropertyStyle"/>
							</propertyStyle>
						</jpaInspector>
						<beanValidationInspector xmlns="java:org.metawidget.inspector.beanvalidation" config="org.metawidget.inspector.impl.BaseObjectInspectorConfig">
							<propertyStyle>
								<forgePropertyStyle refId="forgePropertyStyle"/>
							</propertyStyle>
						</beanValidationInspector>
					</array>
				</inspectors>
			</compositeInspector>
		</inspector>
		
		<widgetBuilder>
			<springWidgetBuilder xmlns="java:org.metawidget.statically.spring.widgetbuilder"/>
		</widgetBuilder>

		<widgetProcessors>
			<array>
				<!-- FORGE-468: <requiredAttributeProcessor xmlns="java:org.metawidget.statically.faces.component.widgetprocessor"/> -->
				<cssStyleProcessor xmlns="java:org.metawidget.statically.spring.widgetprocessor"/>
				<hiddenFieldProcessor xmlns="java:org.metawidget.statically.spring.widgetprocessor"/>
				<pathProcessor xmlns="java:org.metawidget.statically.spring.widgetprocessor"/>
				<unsearchableWidgetProcessor xmlns="java:org.jboss.forge.scaffold.spring.metawidget.widgetprocessor"/>
			</array>
		</widgetProcessors>

		<layout>
			<springTableLayout xmlns="java:org.metawidget.statically.spring.layout" config="org.metawidget.statically.html.layout.HtmlTableLayoutConfig"/>
		</layout>
		
	</staticSpringMetawidget>

	<staticJspMetawidget xmlns="java:org.metawidget.statically.jsp">

		<inspector>
			<compositeInspector xmlns="java:org.metawidget.inspector.composite" config="CompositeInspectorConfig">
				<inspectors>
					<array>
						<propertyTypeInspector xmlns="java:org.metawidget.inspector.propertytype" config="org.metawidget.inspector.impl.BaseObjectInspectorConfig">
							<propertyStyle>
								<forgePropertyStyle id="forgePropertyStyle" xmlns="java:org.jboss.forge.spring.metawidget.inspector.propertystyle" config="ForgePropertyStyleConfig">
									<project>
										<forgeProject/>
									</project>
								</forgePropertyStyle>
							</propertyStyle>
						</propertyTypeInspector>
						<forgeInspector xmlns="java:org.jboss.forge.spring.metawidget.inspector" config="org.metawidget.inspector.impl.BaseObjectInspectorConfig">
							<propertyStyle>
								<forgePropertyStyle refId="forgePropertyStyle"/>
							</propertyStyle>
						</forgeInspector>
						<jpaInspector xmlns="java:org.metawidget.inspector.jpa" config="JpaInspectorConfig">
							<propertyStyle>
								<forgePropertyStyle refId="forgePropertyStyle"/>
							</propertyStyle>
						</jpaInspector>
						<beanValidationInspector xmlns="java:org.metawidget.inspector.beanvalidation" config="org.metawidget.inspector.impl.BaseObjectInspectorConfig">
							<propertyStyle>
								<forgePropertyStyle refId="forgePropertyStyle"/>
							</propertyStyle>
						</beanValidationInspector>
					</array>
				</inspectors>
			</compositeInspector>
		</inspector>

		<widgetBuilder>
			<compositeWidgetBuilder xmlns="java:org.metawidget.widgetbuilder.composite" config="CompositeWidgetBuilderConfig">
				<widgetBuilders>
					<array>
						<readOnlyWidgetBuilder xmlns="java:org.metawidget.statically.html.widgetbuilder"/>
						<entityWidgetBuilder xmlns="java:org.jboss.forge.scaffold.spring.metawidget.widgetbuilder"/>
						<jspWidgetBuilder xmlns="java:org.metawidget.statically.jsp.widgetbuilder"/>
					</array>
				</widgetBuilders>
			</compositeWidgetBuilder>
		</widgetBuilder>

		<widgetProcessors>
			<array>
				<hiddenFieldProcessor xmlns="java:org.metawidget.statically.jsp.widgetprocessor"/>
				<standardBindingProcessor xmlns="java:org.metawidget.statically.jsp.widgetprocessor"/>
			</array>
		</widgetProcessors>

		<layout>
			<simpleLayout xmlns="org.metawidget.statically.layout"/>
		</layout>

	</staticJspMetawidget>

</metawidget>